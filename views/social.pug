html
    head
        title Let's get social
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')
        script(src='https://code.jquery.com/jquery-3.3.1.js')
        script(src='/assets/js/social.js')
    body
      div(class='container')
        h1 Get Ripped
        div(class='row')
          div(class='col m4 s12')
            h4= 'Humble Brag'
            form()
              div(class="input-field")
                input(placeholder="Upload photo" id="uploadPhoto" type="text")
              div(class="input-field")
                input(placeholder="Upload caption" id="uploadCaption" type="text")
              button(id="uploadPost" class="btn waves-effect waves-light" type="submit" name="action")= 'Submit'
          div(class='col m8 s12')
            ul
              h4= 'Your feed'
              each val in photos
                li(class='photo')= val
              each val in captions
                li(class='caption')= val
              each val in users
                li(class='user')= val
        