extends layout
block content
	div(class='container')
		h1 Get Ripped
		.row
			.col.m4.s12
				h4 Humble Brag
				form
					.input-field
						input#uploadPhoto(placeholder="Upload photo" type="text")
					.input-field
						input(placeholder="Upload caption" id="uploadCaption" type="text")
					button(id="uploadPost" class="btn waves-effect waves-light" type="submit" name="action") Submit
			div(class='col m8 s12')
				ul
					h4 Your feed
					each val in photos
						li(class='photo')= val
					each val in captions
						li(class='caption')= val
					each val in users
						li(class='user')= val
