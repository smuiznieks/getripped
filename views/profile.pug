extends layout
block content
    .container
        .row
            .col.s12
                h4 @#{username}'s Profile
                h5 Get Ready to Work Out
                br
                h5 Bio
                h6 Name: #{profName}
                h6 City: #{profLocation}
                br
                hr
                br
                h5 Work Out Log
                br
                hr
                br
                h5 Update Profile
                form
                    .input-field
                        input#updatePic(placeholder="Update Profile Picture" type="text")
                    .input-field
                        input#updateName(placeholder="Update Profile Name" type="text")
                    .input-field
                        input#updateLocation(placeholder="Update Location" type="text")
                    button#updateProfile(class="btn waves-effect waves-light" type="submit" name="action") Update Profile
            