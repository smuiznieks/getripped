extends layout
block content
    .container
        h1|Get Ripped Workouts
        p(class="flow-text")|Select a workout category below for a list of exercises that will get you totally ripped!
        .row(class="center-align")
            a(class="btn exercise-btn" data-exercise="arms")|Arms
            a(class="btn exercise-btn" data-exercise="shoulders")|Shoulders
            a(class="btn exercise-btn" data-exercise="legs")|Legs
            a(class="btn exercise-btn" data-exercise="back")|Back
            a(class="btn exercise-btn" data-exercise="abs")|Abs
            a(class="btn exercise-btn" data-exercise="chest")|Chest
            

        .card#workouts
            .card-content
                .row
                    .col.s10
                    .col.s2
                        a(class="tooltipped btn-floating btn-large waves-effect waves-light red" data-position="bottom" data-delay="50" data-tooltip="Share")
                            i(class="material-icons")|share